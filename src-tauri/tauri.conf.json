{
	"build": {
		"beforeDevCommand": "",
		"beforeBuildCommand": "",
		"devPath": "../src",
		"distDir": "../src",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "minimalist-music",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"shell": {
				"open": true
			},
			"window": {
				"close": true,
				"minimize": true,
				"startDragging": true,
				"setSize": true
			},
			"fs": {
				"readDir": true,
				"readFile": true,
				"exists": true,
				"scope": ["**", "**/*", "/**/*", "*"]
			},
			"globalShortcut": {
        "all": true
      },
			"path": {
        "all": true
      }
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.minimalist.music.tauri",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"maximizable": false,
				"title": "Minimalist Music",
				"width": 525,
				"height": 188,
				"decorations": false,
				"transparent": true
			}
		]
	}
}
